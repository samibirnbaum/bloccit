<h4>Add A Comment</h4>

<%=form_for [post, comment] do |f|%>
    <div class="form-group">
        <%=f.label(:body, class: "sr-only")%>
        <%=f.text_field(:body, class: "form-control", placeholder: "Enter a new comment")%>
    </div>
    
    <%=f.submit("Create", class: "btn btn-default pull-right")%>
<% end %>