<%if favorite = current_user.favorite_for(post)%>
    <%= link_to post_favorite_path(post, favorite), class: 'btn btn-danger', method: :delete do %>
        <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unfavorite
    <% end %>
<%else%>
    <%= link_to post_favorites_path(post, Favorite.new), class: 'btn btn-primary', method: :post do %>
        <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorite
    <% end %>
<% end %>
