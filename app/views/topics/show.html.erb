<h1><%=@topic.name%></h1>

<%=link_to("Edit Topic", edit_topic_path(@topic.id), class: "btn btn-success")%>
<%=link_to("Delete Topic", "/topics/#{@topic.id}", method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this topic?"})%>


<!--show every post associated with that topic-->
<div class="row">
    <div class="col-md-8">
        <p class="lead"><%=@topic.description%></p>
        
        <%@topic.posts.each do |post|%>
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading">
                        <%=link_to(post.title, post_path(post.id)) %>
                    </h4>
                </div>
            </div>
        <%end%>
    <div>

    <div class="col-md-4">
        <%=link_to("New Post", new_post_path(@topic.id), class: "btn btn-success")%> <!--arg is assigned to :format param this means any new post can be associated with the topic id found in :format->
    </div>
</div>