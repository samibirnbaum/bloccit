<h1>Create a new question!</h1>

<%=form_for @question do |f|%>
    <div class="form-group">
        <%=f.label(:title)%>
        <%=f.text_field(:title, class: "form-control", placeholder: "Enter title here")%>
    </div>
    <div class="form-group">
        <%=f.label(:body)%>
        <%=f.text_area(:body, class: "form-control", placeholder: "Enter body of question here")%>
    </div>
    <div class="form-group">
        <%=f.label("Resolved?")%>
        <%=f.check_box(:resolved, value: 0, disabled: true)%>
    </div>
    <div class="form-group">
        <%=f.submit("Create", class: "btn btn-success")%>
    </div>
<%end%>