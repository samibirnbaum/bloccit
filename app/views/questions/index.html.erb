<h1>Questions HomePage!! - All Questions</h1>

<%= link_to "Create New Question", new_question_path, class: 'btn btn-success' %>

<%@questions.each do |question| %>
    <div class="media">
        <div class="media-body">
            <h4 class="media-heading">
                <%= link_to(question.title, question_path(question.id)) %>
            </h4>
        </div>
   </div> 
<% end %>

