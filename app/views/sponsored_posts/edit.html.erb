<h1>Edit Sponsored Post</h1>

<div class="row">
    <div class="col-md-8">
        <!--ERB helper method which creates html form - allows user input to populate post object-->
        <%= form_for([@topic, @spost]) do |f| %>
        <div class="form-group">
            <%= f.label(:title) %>
            <%= f.text_field(:title, class: "form-control", placeholder: "Enter sponsored post title") %>
        </div>
        <div class="form-group">    
            <%= f.label(:body) %>
            <%= f.text_area(:body, class: "form-control", placeholder: "Enter sponsored post body") %>
        </div>
        <div class="form-group">    
            <%= f.label(:price) %>
            <%= f.number_field(:price, min: 0, class: "form-control", placeholder: "Enter sponsored post price") %>
        </div>
        <div class="form-group">    
            <%= f.submit("Update", class: "btn btn-success") %>
        </div>
        <% end %>
    </div>
</div>